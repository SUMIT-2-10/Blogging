<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogging</title>
    <%- include('partials/head') %>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #7c7c7c;
            }

            h1 {
                color: #333;
                margin: 20px;
            }

            p {
                margin: 0 20px;
            }

            .card {
                height: 100%;
                display: flex;
                flex-direction: column;
            }

            .card-img-top {
                height: 200px;
                object-fit: cover;
            }

            .card-body {
                flex: 1;
                display: flex;
                flex-direction: column;
            }

            .card-text {
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
                max-height: 4.5em;
                line-height: 1.5em;
                flex: 1;
            }

            .card .btn {
                margin-top: auto;
            }
        </style>
</head>

<body>
    <%- include('partials/nav') %>
    <div class="container mt-5 d-flex flex-wrap gap-4">
        <% allBlogs.forEach(blog=> { %>
            <div class="mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blog.title %>
                        </h5>
                        <p class="card-text">
                            <%= blog.content %>
                        </p>
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            <% }) %>

                <%- include('partials/script') %>
</body>

</html>